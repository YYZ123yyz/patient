<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            android:id="@+id/title_bar"
            layout="@layout/item_toolbar">

        </include>

        <RelativeLayout
            android:id="@+id/rl_cancel_contract"
            android:layout_width="match_parent"
            android:layout_height="48.5dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="解约原因"
                android:textColor="@color/color_000000"
                android:textSize="15sp">


            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:id="@+id/ll_refuse_root"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel_contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@mipmap/bg_right_forward"
                    android:drawablePadding="10dp"
                    android:text="请选择"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp">


                </TextView>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_f0f0f0">


        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="17dp"
                android:text="拒绝描述"
                android:textColor="@color/color_000000"
                android:textSize="15sp">


            </TextView>

            <EditText
                android:id="@+id/ed_refused_reason"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:layout_marginStart="23.5dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="23.5dp"
                android:layout_marginBottom="20.5dp"
                android:background="@drawable/bg_round_f6f6f6_8"
                android:gravity="start"
                android:padding="10dp">


            </EditText>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_round_799dfe_17"
        android:paddingStart="102dp"
        android:paddingTop="9.5dp"
        android:paddingEnd="102dp"
        android:layout_marginBottom="53dp"
        android:paddingBottom="9.5dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp"

        >


    </TextView>

</RelativeLayout>