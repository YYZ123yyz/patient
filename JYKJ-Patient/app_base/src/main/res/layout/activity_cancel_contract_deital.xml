<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6">

    <include
        android:id="@+id/item_title"
        layout="@layout/item_toolbar">


    </include>



    <RelativeLayout
        android:id="@+id/rl_content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item_title"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:id="@+id/ll_top_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_cancel_contract"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="解约原因"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"

                    >


                </TextView>

                <TextView
                    android:id="@+id/tv_cancel_contract_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:text="解约原因"
                    android:textColor="@color/color_999999"
                    android:textSize="14sp">


                </TextView>
            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp">

            </View>

            <LinearLayout
                android:id="@+id/rl_cancel_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_cancel_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"

                    android:text="解约描述"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"

                    >


                </TextView>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_cancel_contract_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="23.5dp"
                android:layout_marginEnd="23.5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_round_ececec_8"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="18dp"
                android:text="sdfs"
                android:textColor="@color/color_333333"
                android:textSize="14sp">


            </TextView>


            <LinearLayout
                android:id="@+id/lin_refuse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_f6f6f6" />

                <RelativeLayout
                    android:id="@+id/rl_refuse_contract"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:text="拒绝原因"
                        android:textColor="@color/color_000000"
                        android:textSize="15sp"

                        >


                    </TextView>

                    <TextView
                        android:id="@+id/tv_cancel_refuse_reason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:text="拒绝原因"
                        android:textColor="@color/color_999999"
                        android:textSize="14sp">


                    </TextView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_refuse_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/tv_refuse_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:text="拒绝描述"
                        android:textColor="@color/color_000000"
                        android:textSize="15sp"

                        >


                    </TextView>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_refuse_contract_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23.5dp"
                    android:layout_marginEnd="23.5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_round_ececec_8"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="18dp"
                    android:text="sdfs"
                    android:textColor="@color/color_333333"
                    android:textSize="14sp">


                </TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_top_root"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="签约详情"
                android:textColor="@color/color_000000"
                android:textSize="15sp">


            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_round_f6f6f6_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_type_of_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="13dp"
                        android:text="签约就诊"
                        android:textColor="@color/color_000000"
                        android:textSize="15sp">


                    </TextView>

                    <TextView
                        android:id="@+id/tv_sign_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:text="2020/05/10 8:00"
                        android:textColor="@color/color_999999"
                        android:textSize="15sp">


                    </TextView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_eeeeee">


                </View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp">

                    <TextView
                        android:id="@+id/tv_monitor_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="监测类型"
                        android:textColor="@color/color_000000"
                        android:textSize="13sp">


                    </TextView>

                    <TextView
                        android:id="@+id/tv_monitor_type_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="三项"
                        android:textColor="@color/color_999999">


                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp">

                    <TextView
                        android:id="@+id/tv_coatch_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="辅导频次"
                        android:textColor="@color/color_000000"
                        android:textSize="13sp">


                    </TextView>

                    <TextView
                        android:id="@+id/tv_coatch_rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="2次/月"
                        android:textColor="@color/color_999999">


                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp">

                    <TextView
                        android:id="@+id/tv_sign_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签约时长"
                        android:textColor="@color/color_000000"
                        android:textSize="13sp">


                    </TextView>

                    <TextView
                        android:id="@+id/tv_sign_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="一年"
                        android:textColor="@color/color_999999">


                    </TextView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_sign_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="10dp"
                    android:text="99.00"
                    android:textColor="@color/color_F14646"
                    android:textSize="14sp">


                </TextView>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_oper_buttom_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_refuse_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22.5dp"
                android:background="@drawable/bg_round_7a9dd8_15"
                android:gravity="center"
                android:paddingStart="35dp"
                android:paddingTop="8dp"
                android:paddingEnd="35dp"
                android:paddingBottom="8dp"
                android:text="拒绝"
                android:textColor="@color/white">


            </TextView>

            <TextView
                android:id="@+id/tv_agree_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22.5dp"
                android:background="@drawable/bg_round_7a9dd8_15"
                android:gravity="center"
                android:paddingStart="35dp"
                android:paddingTop="8dp"
                android:paddingEnd="35dp"
                android:paddingBottom="8dp"
                android:text="同意"
                android:textColor="@color/white">


            </TextView>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>