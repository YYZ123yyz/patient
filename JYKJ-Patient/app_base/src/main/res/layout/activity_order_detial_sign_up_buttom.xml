<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="114.5dp"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_refuse_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="22.5dp"
        android:background="@drawable/bg_round_7a9dd8_15"
        android:paddingStart="35dp"
        android:paddingTop="8dp"
        android:paddingEnd="35dp"
        android:paddingBottom="8dp"
        android:text="拒绝"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_round_7a9dd8_15"
        android:paddingStart="35dp"
        android:paddingTop="8dp"
        android:paddingEnd="35dp"
        android:paddingBottom="8dp"
        android:text="修改"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_agree_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22.5dp"
        android:background="@drawable/bg_round_7a9dd8_15"
        android:paddingStart="35dp"
        android:paddingTop="8dp"
        android:paddingEnd="35dp"
        android:paddingBottom="8dp"
        android:text="同意"
        android:textColor="@color/white" />
</RelativeLayout>