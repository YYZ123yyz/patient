<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/writeColor"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-11-30 11:08"
            android:textSize="7pt"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图文就诊"
            android:textSize="7pt"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/tabColor_nomal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pBackColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="患者姓名：李患者"
            android:textSize="8pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：男"
            android:textSize="8pt"
            android:layout_centerInParent="true"
            android:textColor="@color/tabColor_nomal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄：55"
            android:textSize="8pt"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/tabColor_nomal"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="截止时间：2019-11-30 15:30"
        android:textSize="8pt"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textColor_vt"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问诊信息"
            android:textSize="8pt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@mipmap/bg5"
            android:gravity="center"
            android:textColor="@color/groabColor"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="患医互动"
            android:padding="10dp"
            android:textSize="8pt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/bg5"
            android:gravity="center"
            android:textColor="@color/groabColor"/>
    </RelativeLayout>
</LinearLayout>