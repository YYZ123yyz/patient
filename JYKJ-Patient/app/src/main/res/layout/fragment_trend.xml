<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/writeColor"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_blood_day_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日均"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_day_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_week_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周均"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_week_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:orientation="horizontal"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_month_average"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="月均"
                android:textColor="@color/tabColor_nomal"
                android:textSize="9pt" />

            <LinearLayout
                android:id="@+id/view_blood_month_average"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/groabColor"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看时间:"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="近7天"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/groabColor"
            android:gravity="center"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/arrow_r"
            android:layout_marginRight="10dp"
            android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/writeColor"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_blood_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全天血压"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_day"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晨间均压"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_week"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间均压"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:id="@+id/view_blood_month"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/groabColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分次数值"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="9pt"
                android:textColor="@color/tabColor_nomal"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@color/groabColor"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/writeColor"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="白小童"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"
            />
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"
            />
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30岁"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="血压:113/85"
            android:layout_gravity="center"
            android:textSize="8pt"
            android:textColor="@color/tabColor_nomal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心率:87"
            android:textSize="8pt"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tabColor_nomal"
            />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/line_chart"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:background="@color/writeColor"
        android:orientation="vertical">
    </com.github.mikephil.charting.charts.LineChart>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全天均压，每日测量血压平均值"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/colorRed" />

</LinearLayout>