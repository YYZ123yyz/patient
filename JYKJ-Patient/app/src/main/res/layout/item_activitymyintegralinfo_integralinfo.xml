<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="10dp"
    android:background="@color/writeColor"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:background="@color/pBackColor">
       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginLeft="10dp"
           android:background="@mipmap/activity_myintegral_gift"
           android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="某某片"
            android:textSize="9pt"
            android:id="@+id/tv_itemIntegralInfo_productName"
            android:textColor="@color/tabColor_nomal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍产品介绍"
            android:textSize="7pt"
            android:lines="2"
            android:id="@+id/tv_itemIntegralInfo_productExplain"
            android:ellipsize="end"
            android:textColor="@color/textColor_vt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6800 积分"
            android:id="@+id/tv_itemIntegralInfo_productIntegralPrice"
            android:textSize="9pt"
            android:textColor="@color/colorRed"/>

    </LinearLayout>
    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="兑换"
        android:layout_marginLeft="10dp"
        android:textColor="@color/writeColor"
        android:textSize="8pt"
        android:background="@mipmap/b"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"/>
</LinearLayout>