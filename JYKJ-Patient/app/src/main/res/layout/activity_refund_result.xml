<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gradient"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:id="@+id/iv_back_left"
                android:src="@mipmap/arrow_left">


            </ImageView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="19sp">


            </TextView>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_title_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="38.5dp"
            android:layout_marginEnd="35dp"
            android:text="请等待平台处理"
            android:textColor="@color/white"

            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/tv_title_tip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="24dp"
            android:text="请耐心等待1-3个工作日"

            android:textColor="@color/white"
            android:textSize="13sp">

        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/ll_start_refund_root"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14.5dp"
            android:layout_marginEnd="10dp"
            android:text="您已成功发起退款申请，请耐心等待平台处理。"
            android:textColor="@color/color_000000"
            android:textSize="14sp">


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_oval_frame_78a0e6_15"
            android:paddingStart="13.5dp"
            android:paddingTop="7dp"
            android:paddingEnd="13.5dp"
            android:paddingBottom="7dp"
            android:text="撤销申请"
            android:id="@+id/tv_revoke_btn"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_799dfe"
            android:textSize="15sp">


        </TextView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/rl_refund_money_root"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:text="退款金额"
            android:textColor="@color/color_000000"
            android:textSize="15sp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            >


        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:textSize="15sp"
            android:text="99.0"
            android:id="@+id/tv_refund_money"
            android:textColor="@color/color_ee0000"
            >


        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:id="@+id/rl_refund_root"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_000000"
            android:textSize="15sp"
            android:text="退款路径"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"

            >


        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/color_666666"
            android:textSize="15sp"
            android:text="原路返回"
            android:id="@+id/tv_refund_path"
            >


        </TextView>
    </RelativeLayout>
</LinearLayout>