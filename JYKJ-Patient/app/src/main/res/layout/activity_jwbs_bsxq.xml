<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/pBackColor"
              tools:context=".activity.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/groabColor">
        <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/back"
        >
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/arrow_left" />
        </RelativeLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="病历小结"
                android:textColor="@color/writeColor"
                android:textSize="10pt" />
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
               android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/writeColor"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="记录类型"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未设置"
                        android:id="@+id/tv_ystx_jllx"
                        android:background="@null"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/writeColor"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="记录医生"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击选择"
                        android:id="@+id/tv_ystx_jlys"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/writeColor"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="记录日期"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/tv_ystx_jlrq"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="主诉"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/writeColor">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="未设置"
                        android:id="@+id/tv_ystx_zs"
                        android:textSize="15sp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="体征"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/writeColor">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="未设置"
                        android:id="@+id/tv_ystx_tz"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="既往史"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/writeColor">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="未设置"
                        android:id="@+id/tv_ystx_jws"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="辅助诊断"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/writeColor">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="未设置"
                        android:id="@+id/tv_ystx_fzzd"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="初步臆断"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/writeColor">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:text="未设置"
                        android:id="@+id/tv_ystx_cbyd"
                        android:textSize="15sp"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/writeColor"
                    android:orientation="horizontal"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/writeColor"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" android:visibility="gone">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="诊断照片"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/tabColor_nomal"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:id="@+id/image01"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:id="@+id/image02"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:id="@+id/image03"
                        android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:id="@+id/image04"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:id="@+id/image05"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:id="@+id/image06"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>