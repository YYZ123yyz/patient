<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/writeColor"
    android:orientation="vertical"
    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:paddingLeft="10dp"
      android:textColor="@color/textColor_vt"
      android:text="2019-11-27"
      android:textSize="7pt"
      android:gravity="center_vertical"
      android:background="@color/pBackColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="睡眠：午休"
            android:layout_marginLeft="10dp"
            android:textSize="9pt"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tabColor_nomal"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由患者本人添加"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="7pt"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:00"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="9pt"
            android:textColor="@color/tabColor_nomal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时长：1小时"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="9pt"
            android:textColor="@color/tabColor_nomal"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已打卡"
            android:textColor="@color/groabColor"
            android:gravity="center"
           android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="8pt"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pBackColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运动：散步走"
            android:layout_marginLeft="10dp"
            android:textSize="9pt"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tabColor_nomal"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="由患者本人添加"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="7pt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="9pt"
            android:textColor="@color/tabColor_nomal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时长：30分钟"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tabColor_nomal"
            android:textSize="9pt"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/groabColor"
            android:text="已打卡"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="8pt"

            />
    </LinearLayout>
</LinearLayout>