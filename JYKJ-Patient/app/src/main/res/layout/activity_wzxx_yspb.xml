<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/writeColor"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/groabColor">
            <LinearLayout
                android:layout_width="60dp"
                android:id="@+id/iv_back_left"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/arrow_left" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预约时间"
                android:textColor="@color/writeColor"
                android:textSize="10pt" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="重急症不适合在网上咨询，如有不适请立即前往当地线下医生就诊"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#ffbe5900"
        android:background="#fffaf4da"
        android:textSize="13sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"

            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/rv_rq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择时间段"

            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/rv_sjd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余号源"

            android:textColor="#ff000000"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="周一"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@mipmap/yspb_nochoice"
            android:id="@+id/tv_hy"
            android:textSize="8pt"
            android:textColor="@color/textColor_vo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffdbdbdb">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="金额: ¥30.00元"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#ff333333"
            android:id="@+id/tv_jg"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="确认付款"
            android:id="@+id/tv_qd"
            android:textColor="#ffffffff"
            android:background="#FA4A4A"
            android:gravity="center"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>