<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pBackColor"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/groabColor">
                <LinearLayout
                    android:layout_width="60dp"
                    android:id="@+id/iv_back_left"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView

                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/arrow_left" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="建档档案"
                    android:textColor="@color/writeColor"
                    android:textSize="10pt" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:id="@+id/li_jbjkxx"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/myself_jdda"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基本健康信息"
                    android:textColor="#ff333333"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:id="@+id/li_zzxx"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/myself_zzxx"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="症状信息"
                    android:textColor="#ff333333"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:id="@+id/li_bqjl"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/bqjl"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标签记录"
                    android:textColor="#ff333333"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:paddingLeft="10dp"
                android:id="@+id/li_jwbs"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="17dp"
                    android:background="@mipmap/jwbs"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="既往病史"
                    android:textColor="#ff333333"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>