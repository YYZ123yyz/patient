<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_round_ffffff_5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_fragmentYLZX_rmjxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/writeColor"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/treat_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="图文就诊"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/treat_state"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="[未支付]"
                android:textColor="@color/textColor_hztltabyj"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="2020/05/10  8:00"
                android:textColor="#ff999999"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/order_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="您已成功提交就诊内容，请于30分钟内完成支付，"
            android:textColor="#ff666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pay_btn"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_myorder_button"
            android:gravity="center"
            android:text="支付"
            android:focusable="false"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/find_doc_btn"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:focusable="false"
            android:background="@drawable/bg_myorder_button"
            android:gravity="center"
            android:text="寻找名医"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#FFF55030"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/delete"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />
</LinearLayout>
