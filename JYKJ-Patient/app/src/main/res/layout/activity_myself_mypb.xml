<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pBackColor"
    tools:context=".activity.myself.MyAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor"
        >
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/arrow_left"/>
        </LinearLayout>
        <TextView
            android:text="我的排班"
            android:textSize="10pt"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textColor="@color/writeColor"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="提交"
            android:layout_alignParentRight="true"
            android:textSize="9pt"
            android:id="@+id/tv_activityMyPB_commit"
            android:textColor="@color/writeColor"
            android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@mipmap/fragmentmyself_wdpb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上午"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="9pt"
            android:textColor="@color/textColor_vo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中午"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="9pt"
            android:textColor="@color/textColor_vo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚上"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="9pt"
            android:textColor="@color/textColor_vo"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_activityMyPB_recycleView"/>

</LinearLayout>