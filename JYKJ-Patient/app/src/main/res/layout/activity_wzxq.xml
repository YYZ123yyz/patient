<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pBackColor"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/groabColor">
                <LinearLayout
                    android:layout_width="60dp"
                    android:id="@+id/iv_back_left"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <ImageView

                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/arrow_left" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="就诊详情"
                    android:textColor="@color/writeColor"
                    android:textSize="10pt" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/zhlyhf"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="诊后留言回复"
                    android:layout_weight="1"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="未填写"
                    android:id="@+id/tv_zhlyhf"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:id="@+id/zdms"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="诊断描述"
                    android:layout_weight="1"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="未填写"
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_zdms"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:id="@+id/jzxj"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="就诊小结"
                    android:layout_weight="1"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="未填写"
                    android:id="@+id/tv_jzxj"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:id="@+id/kjcf"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="开具处方"
                    android:layout_weight="1"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="未填写"
                    android:id="@+id/tv_kjcf"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:id="@+id/jzjl"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="就诊记录"
                    android:layout_weight="1"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="未填写"
                    android:id="@+id/tv_jzjl"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/tabColor_nomal"
                    android:textSize="8pt"/>
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/roww_right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>