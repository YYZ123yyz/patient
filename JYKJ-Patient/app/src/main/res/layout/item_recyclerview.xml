<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
      <LinearLayout
          android:layout_marginTop="13dp"
          android:layout_marginLeft="23.5dp"
          android:background="@drawable/shape_box_gray2"
          android:layout_width="150dp"
          android:orientation="vertical"
          android:layout_height="wrap_content">
          <TextView
              android:textColor="#000"
              android:text="复方丹参片"
              android:id="@+id/tv_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_marginTop="5dp"
              android:layout_marginLeft="20dp"
              android:textColor="#000"
              android:text="(1盒/12瓶)3.0/盒"
              android:id="@+id/tv_specification"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
      </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_box_gray2"
        android:layout_width="80dp"
        android:layout_height="wrap_content">
          <TextView
              android:gravity="center"
              android:text="6 片/次"
              android:textColor="#000"
              android:id="@+id/tv_frequency"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="13dp"
        android:background="@drawable/shape_box_gray2"
        android:layout_width="80dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="3次/天"
            android:id="@+id/tv_useFrequencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="服药周 期7天"
            android:id="@+id/useNumName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
