<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/writeColor"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_back_left"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow_left" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_my_patient"
            android:text="签约患者"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@mipmap/pg_messagetitle"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textColor="@color/tabColor_nomal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/ll_back"
            />
        <TextView
            android:id="@+id/tv_my_patient_n"
            android:text="未签约患者"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/tv_my_patient"
            android:layout_width="90dp"
            android:textColor="@color/writeColor"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_my_review"
            android:text="申请审核"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="@color/writeColor"
            android:layout_centerVertical="true"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/tv_my_patient_n"/>

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_add_small"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_add"
            android:layout_marginRight="10dp"
            android:src="@mipmap/search1"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>



</LinearLayout>