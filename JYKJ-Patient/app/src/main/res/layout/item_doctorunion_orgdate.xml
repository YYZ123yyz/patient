<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/writeColor"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/li_clickLayout"
        android:background="@color/writeColor">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="8pt"
            android:textColor="@color/tabColor_nomal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="白医生" />


        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_setting_button"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"
            android:text="修改"
            android:textColor="@color/groabColor"
            android:textSize="7pt" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/shape_setting_button"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="3dp"
            android:paddingRight="15dp"
            android:paddingBottom="3dp"
            android:text="删除"
            android:textColor="@color/groabColor"
            android:textSize="7pt" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/hintTextColor" />


</LinearLayout>