<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/writeColor"
    android:id="@+id/li_clickLayout"
    android:orientation="horizontal"
    >
    <www.patient.jykj_zxyl.util.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/docter_heard"
        android:id="@+id/userHead"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:id="@+id/userName"
                android:textColor="@color/blackColor"
                android:text="李医生"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textColor="@color/blackColor"
                android:id="@+id/userTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:text="主任医生|心内科"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="8pt"
            android:id="@+id/visiting_appointment"
            android:textColor="@color/textColor_vo"
            android:text="预约时间"/>
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@color/textColor_vo"
            android:id="@+id/userTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="主任医生|心内科"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="7pt"
            android:id="@+id/visiting_project"
            android:textColor="@color/hintTextColor"
            android:text="预约项目"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="前面"
            android:id="@+id/visiting_front"
            android:textColor="#ff333333"
            android:textSize="7pt"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@drawable/bg_advisory"
                android:layout_marginTop="10dp"
                android:text="取消预约"
                android:id="@+id/visiting_cancelappointment"
                android:textColor="#7A9EFF"
                />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>