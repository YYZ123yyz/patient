<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:background="@drawable/pop_triangle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/pop_more_feature_bg">

        <TextView
            android:id="@+id/tv_sys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:textSize="16sp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="15dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textColor_black"
            android:drawableLeft="@mipmap/pop_sys"/>
        <TextView
            android:id="@+id/tv_yqth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家推荐"
            android:textSize="16sp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="15dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textColor_black"
            android:drawableLeft="@mipmap/pop_tjhz"/>
        <TextView
            android:id="@+id/tv_tjhz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的医生"
            android:textSize="16sp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="15dp"
            android:drawablePadding="10dp"
            android:textColor="@color/textColor_black"
            android:drawableLeft="@mipmap/pop_tjhz"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_wdzs"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/jx"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textSize="16sp"
           android:layout_marginLeft="10dp"
            android:textColor="@color/textColor_black"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tv_wdxx"
            android:paddingTop="15dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/kyy_da"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的档案"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textColor_black"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:id="@+id/tv_bzfk"
            android:paddingBottom="15dp"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/yqth"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的好友"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textColor_black"
           />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>