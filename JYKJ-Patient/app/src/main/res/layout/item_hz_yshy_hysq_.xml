<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/writeColor"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/hztx"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_itemUserImageText"

        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="狄仁杰"
                android:textSize="9pt"
                android:id="@+id/tv_itemUserNameText"
                android:textColor="@color/tabColor_nomal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省三院"
                android:id="@+id/tv_itemSSYText"
                android:textSize="7pt"
                android:layout_marginLeft="10dp"
                android:textColor="@color/tabColor_nomal"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:48"
            android:textSize="7pt"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:id="@+id/date"
            android:textColor="@color/textColor_vt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李萌飞的联盟"
            android:textSize="7pt"
            android:id="@+id/tv_applyReason"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColor_vt"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        android:id="@+id/opera">
    <TextView
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="同意"
        android:id="@+id/tv_ty"

        android:gravity="center"
        android:background="@mipmap/bg5"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:text="拒绝"
            android:id="@+id/tv_jj"
            android:gravity="center"
            android:background="@mipmap/bg5"/>
    </LinearLayout>
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="已同意"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:textSize="8pt"
        android:id="@+id/flagApplyStateText"
        android:layout_marginRight="10dp"
        android:textColor="@color/textColor_vt"
        />
</LinearLayout>