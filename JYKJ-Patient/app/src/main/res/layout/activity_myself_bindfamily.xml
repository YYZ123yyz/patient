    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/writeColor"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲友一"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textSize="8pt"
            android:textColor="@color/textColor_vo"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入亲友电话"
            android:background="@null"
            android:id="@+id/tv_activityUserCenter_userNameText"
            android:textColorHint="@color/editHintColor"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="8pt"
            android:textColor="@color/textColor_vo"/>

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/writeColor"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="亲友二"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入亲友电话"
                    android:background="@null"
                    android:id="@+id/tv_activityUserCenter_userNikeNameText"
                    android:textColorHint="@color/editHintColor"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:textSize="8pt"
                    android:textColor="@color/textColor_vo"/>

            </LinearLayout>

        </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="保存"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:id="@+id/tv_activityUserCenter_commit"
                android:background="@drawable/bg_gzzl_bc"
                android:textColor="#ffffffff"
                android:textSize="15sp"
