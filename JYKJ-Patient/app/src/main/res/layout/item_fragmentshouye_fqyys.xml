<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@color/writeColor"
    android:id="@+id/li_clickLayout"
    android:orientation="horizontal"
    >
    <www.patient.jykj_zxyl.util.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/docter_heard"
        android:id="@+id/userHead"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9pt"
                android:id="@+id/userName"
                android:textColor="@color/blackColor"
                android:text="李医生"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_bind"
                android:background="@mipmap/wdys_bind"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_jz"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/wdys_jz"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="8pt"
            android:id="@+id/userHospital"
            android:layout_weight="1"
            android:textColor="@color/textColor_vo"
            android:text="中国医学科学学院阜外医院"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解绑"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/tv_jb"
            android:visibility="visible"
            android:background="@drawable/bd_wdys_xy"
            android:textColor="#ffffffff"
            android:textSize="7pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请绑定"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/tv_sqbd"
                android:visibility="gone"
                android:background="@drawable/wdys_sqbd"
                android:textColor="#ffffffff"
                android:textSize="7pt"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:textColor="@color/textColor_vo"
            android:id="@+id/userTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="主任医生|心内科"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="7pt"
            android:id="@+id/userGoodAtRealm"
            android:textColor="@color/hintTextColor"
            android:text=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bd_wdys_zx"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="咨询"
                android:id="@+id/tv_zx"
                android:textColor="#ffe6302c"
                android:layout_marginBottom="15dp"
                android:textSize="7pt"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bd_wdys_zx"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="就诊记录"
                android:id="@+id/tv_jzjl"
                android:textColor="#ffe6302c"
                android:layout_marginBottom="15dp"
                android:textSize="7pt"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>