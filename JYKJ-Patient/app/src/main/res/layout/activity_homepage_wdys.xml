<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pBackColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/groabColor">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_back_left"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/arrow_left" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的医生"
            android:textColor="@color/writeColor"
            android:textSize="10pt" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:src="@mipmap/ic_scan"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:textColor="@color/writeColor"-->
                <!--android:textSize="10pt" />-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:text="搜索"-->
                <!--android:id="@+id/tv_activityJoinDoctorsUnion_searchText"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:textColor="@color/writeColor"-->
                <!--android:textSize="9pt" />-->
        </LinearLayout>
    </RelativeLayout>








    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- The main content view -->




      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/writeColor"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:id="@+id/li_activityJoinDoctorsUnion_choiceRegionText"
                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="13dp"
                      android:layout_height="18dp"
                      android:background="@mipmap/zjtj_dw"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"

                      android:text="全部"
                      android:id="@+id/tv_activityJoinDoctorsUnion_choiceRegionText"
                      android:textColor="#ff799dfe"
                      android:textSize="17sp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="8dp"
                  android:layout_weight="1"
                  android:background="@drawable/shape_search_bg"
                  android:gravity="center_vertical">

                  <ImageView
                      android:id="@+id/iv_search"
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_marginLeft="10dp"
                      android:padding="3dp"
                      android:focusableInTouchMode="true"
                      android:focusable="true"
                      android:src="@mipmap/zjtj_ss" />


                  <EditText
                      android:id="@+id/et_search"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:background="@null"
                      android:hint="输入医生医院名称"
                      android:imeOptions="actionSearch"
                      android:lines="1"
                      android:maxLines="1"
                      android:singleLine="true"
                      android:textSize="17sp" />

                  <TextView
                      android:id="@+id/tv_activityJoinDoctorsUnion_searchText"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="搜索"
                      android:layout_marginRight="10dp"
                      android:textColor="#ff799dfe"
                      android:textSize="17sp" />

              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp"
                  android:gravity="center_vertical">
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="20dp"
                      android:layout_marginRight="10dp"
                      android:background="@mipmap/zjtj_sys"/>
                  <ImageView
                      android:layout_width="20dp"
                      android:layout_height="16dp"
                      android:layout_marginRight="10dp"
                      android:id="@+id/drawerLayout"
                      android:background="@mipmap/zjtj_sx"/>
              </LinearLayout>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@color/writeColor">
              <android.support.design.widget.TabLayout
                  android:id="@+id/tab_layout"
                  android:layout_width="match_parent"
                  android:background="@color/writeColor"
                  app:tabIndicatorColor="@color/groabColor"
                    app:tabSelectedTextColor="@color/groabColor"
                  android:layout_height="50dp">

              </android.support.design.widget.TabLayout>
          </LinearLayout>

          <android.support.v4.view.ViewPager
              android:id="@+id/page"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

          </android.support.v4.view.ViewPager>
      </LinearLayout>

        <!-- The navigation drawer -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/writeColor"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="机构背景"
                    android:layout_margin="5dp"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/rv_jgbj"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="医生职称"
                    android:layout_margin="5dp"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:id="@+id/rv_yszc"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@mipmap/tjzj_zu">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重置"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_cz"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:id="@+id/tv_qd"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>


</LinearLayout>